{{> welcome-menu active="login"}}

<div class="card has-background-info has-text-white">
<section class="section">
  
  <h1 class="title has-text-white">Log in</h1>
  <form action="/authenticate" method="POST">
    <div class="field">
      <label class="label has-text-white">Email</label> <input class="input" type="text" placeholder="Enter email" name="email">
    </div>
    <div class="field">
      <label class="label has-text-white">Password</label> <input class="input" type="password" placeholder="Enter Password" name="password">
    </div>
    <br>
    <div class="field is-grouped">
      <button class="button is-info is-light has-text-info-dark has-text-weight-bold">Submit</button>
    </div>
  </form>
  
</section>
</div>
